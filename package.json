{
    "name": "teampulse-turbo",
    "version": "1.1.0",
    "type": "module",
    "private": true,
    "engines": {
        "node": ">=18.17.0"
    },
    "scripts": {
        "start": "node server.js",
        "dev": "NODE_ENV=development nodemon server.js",
        "test": "NODE_OPTIONS='--experimental-vm-modules' jest --experimental-vm-modules",
        "lint": "eslint . --ext .js",
        "lint:fix": "eslint . --ext .js --fix",
        "build": "echo 'Build completed'",
        "docker:build": "docker build -t teampulse-turbo .",
        "docker:run": "docker run -p 3000:3000 --env-file .env teampulse-turbo",
        "clean": "rm -rf node_modules package-lock.json",
        "fresh-install": "npm run clean && npm install"
    },
    "dependencies": {
        "compression": "^1.7.4",
        "cookie-parser": "^1.4.6",
        "cors": "^2.8.5",
        "dotenv": "^16.4.5",
        "express": "^4.19.2",
        "express-rate-limit": "^7.1.5",
        "express-session": "^1.18.2",
        "express-validator": "^7.0.1",
        "helmet": "^7.1.0",
        "mammoth": "^1.6.0",
        "mime-types": "^2.1.35",
        "morgan": "^1.10.0",
        "multer": "^1.4.5-lts.1",
        "openai": "^4.52.0",
        "winston": "^3.13.0"
    },
    "devDependencies": {
        "eslint": "^8.56.0",
        "jest": "^29.7.0",
        "nodemon": "^3.0.2",
        "supertest": "^6.3.4"
    },
    "jest": {
        "preset": "default",
        "extensionsToTreatAsEsm": [
            ".js"
        ],
        "globals": {
            "NODE_ENV": "test"
        },
        "transform": {},
        "testEnvironment": "node",
        "moduleFileExtensions": [
            "js",
            "json"
        ],
        "testMatch": [
            "**/__tests__/**/*.js",
            "**/?(*.)+(spec|test).js"
        ],
        "testPathIgnorePatterns": [
            "/node_modules/"
        ],
        "collectCoverage": false,
        "verbose": true
    },
    "eslintConfig": {
        "env": {
            "node": true,
            "browser": true,
            "es2022": true,
            "jest": true
        },
        "extends": [
            "eslint:recommended"
        ],
        "parserOptions": {
            "ecmaVersion": "latest",
            "sourceType": "module"
        },
        "rules": {
            "no-unused-vars": [
                "warn",
                {
                    "argsIgnorePattern": "^_"
                }
            ],
            "no-console": "off",
            "no-undef": "warn",
            "no-constant-condition": "warn",
            "no-empty": "warn"
        },
        "globals": {
            "html2canvas": "readonly",
            "Chart": "readonly"
        }
    },
    "nodemonConfig": {
        "ext": "js,json",
        "ignore": [
            "node_modules/",
            "dist/",
            "*.test.js"
        ],
        "watch": [
            "./"
        ],
        "env": {
            "NODE_ENV": "development"
        },
        "delay": 1000
    },
    "keywords": [
        "team-management",
        "ai-analysis",
        "collaboration",
        "express",
        "nodejs",
        "gpt-5",
        "esm",
        "negotiation",
        "salary-analysis"
    ],
    "author": "Kaminskyi AI Team",
    "description": "AI-powered team analysis and collaboration tool with GPT-5 integration for negotiation and salary analysis",
    "repository": {
        "type": "git",
        "url": "your-repo-url"
    },
    "license": "MIT",
    "main": "server.js",
    "exports": {
        ".": "./server.js",
        "./utils/*": "./utils/*",
        "./routes/*": "./routes/*",
        "./middleware/*": "./middleware/*"
    }
}
